<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="Executor.SetupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Setup"
        Width="600" Height="560"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="True"
        SnapsToDevicePixels="True" UseLayoutRounding="True"
        TextOptions.TextFormattingMode="Display" TextOptions.TextRenderingMode="Grayscale" TextOptions.TextHintingMode="Fixed">

    <Window.Resources>
        <Color x:Key="AccentColor">#2D7DFF</Color>
        <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}" />
        <SolidColorBrush x:Key="PanelBrush" Color="#0F1626" />
        <SolidColorBrush x:Key="PanelBrush2" Color="#121C31" />
        <SolidColorBrush x:Key="TextBrush" Color="#C8D6F7" />
        <SolidColorBrush x:Key="SubTextBrush" Color="#8FA4D1" />
        <SolidColorBrush x:Key="FieldBorderBrush" Color="#1F315C" />
        <SolidColorBrush x:Key="FieldBrush" Color="#182543" />

        <Style x:Key="ThemeScrollBar" TargetType="ScrollBar">
            <Setter Property="Width" Value="10" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid Width="{TemplateBinding Width}" Background="Transparent">
                            <Track x:Name="PART_Track" IsDirectionReversed="True">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Command="ScrollBar.LineUpCommand" Opacity="0" IsHitTestVisible="False" />
                                </Track.DecreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb>
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Border x:Name="ThumbBd" Background="#2A3550" CornerRadius="6" Margin="2,2,2,2" />
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="ThumbBd" Property="Background" Value="#2E4D88" />
                                                    </Trigger>
                                                    <Trigger Property="IsDragging" Value="True">
                                                        <Setter TargetName="ThumbBd" Property="Background" Value="{StaticResource AccentBrush}" />
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Command="ScrollBar.LineDownCommand" Opacity="0" IsHitTestVisible="False" />
                                </Track.IncreaseRepeatButton>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="FlatButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentBrush}" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Padding" Value="14,8" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.92" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.85" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.45" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="GhostButton" TargetType="Button" BasedOn="{StaticResource FlatButton}">
            <Setter Property="Background" Value="#2A3550" />
        </Style>

        <Style x:Key="CloseButton" TargetType="Button">
            <Setter Property="Width" Value="32" />
            <Setter Property="Height" Value="28" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="{StaticResource SubTextBrush}" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <TextBlock Text="✕" FontSize="12" FontWeight="SemiBold" HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2A3550" />
                                <Setter Property="Foreground" Value="{StaticResource TextBrush}" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.85" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="RoundedTextBox" TargetType="TextBox">
            <Setter Property="Foreground" Value="{StaticResource TextBrush}" />
            <Setter Property="Background" Value="{StaticResource FieldBrush}" />
            <Setter Property="BorderBrush" Value="{StaticResource FieldBorderBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="12,8" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="12">
                            <ScrollViewer x:Name="PART_ContentHost" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource AccentBrush}" />
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="BorderBrush" Value="#2E4D88" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.55" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="LanguageRadio" TargetType="RadioButton">
            <Setter Property="Foreground" Value="{StaticResource SubTextBrush}" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="Card" Background="#101A33" BorderBrush="{StaticResource FieldBorderBrush}" BorderThickness="1" CornerRadius="14" Padding="14">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Border Width="36" Height="36" CornerRadius="12" Background="#0D1428" BorderBrush="#243A6A" BorderThickness="1">
                                    <TextBlock x:Name="Icon" Text="{TemplateBinding Tag}" Foreground="{StaticResource SubTextBrush}" FontSize="14" FontWeight="SemiBold" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                                <StackPanel Grid.Column="1" Margin="12,0,0,0" VerticalAlignment="Center">
                                    <TextBlock x:Name="MainText" Text="{TemplateBinding Content}" Foreground="{StaticResource TextBrush}" FontWeight="SemiBold" />
                                    <TextBlock x:Name="SubText" Text="" Foreground="{StaticResource SubTextBrush}" Margin="0,4,0,0" />
                                </StackPanel>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Card" Property="BorderBrush" Value="#2E4D88" />
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Card" Property="BorderBrush" Value="{StaticResource AccentBrush}" />
                                <Setter TargetName="Card" Property="Background" Value="#13224A" />
                                <Setter TargetName="Icon" Property="Foreground" Value="{StaticResource AccentBrush}" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.55" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="ListBox">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Foreground" Value="{StaticResource TextBrush}" />
            <Setter Property="FontSize" Value="13" />
        </Style>

        <Style x:Key="ThemeListItem" TargetType="ListBoxItem">
            <Setter Property="Padding" Value="0" />
            <Setter Property="Margin" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="Outer" 
                                Background="Transparent" 
                                BorderBrush="Transparent" 
                                BorderThickness="2" 
                                CornerRadius="14" 
                                SnapsToDevicePixels="True">
                            <ContentPresenter Margin="0" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Outer" Property="BorderBrush" Value="#2E4D88" />
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Outer" Property="BorderBrush" Value="{StaticResource AccentBrush}" />
                                <Setter TargetName="Outer" Property="BorderThickness" Value="3" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.55" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <Grid>
        <Border CornerRadius="18" Background="{StaticResource PanelBrush}" SnapsToDevicePixels="True">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="44" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="68" />
                </Grid.RowDefinitions>

                <!-- 標題欄 -->
                <Grid Grid.Row="0" Background="{StaticResource PanelBrush2}" MouseLeftButtonDown="TitleBar_OnMouseLeftButtonDown">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="16,0,0,0">
                        <Ellipse Width="8" Height="8" Fill="{StaticResource AccentBrush}" Margin="0,0,10,0" />
                        <TextBlock x:Name="TitleText" Text="First-time Setup" Foreground="{StaticResource TextBrush}" FontWeight="SemiBold" />
                    </StackPanel>

                    <Button Grid.Column="1" Margin="0,0,10,0" Style="{StaticResource CloseButton}" Click="CloseButton_OnClick" />
                </Grid>

                <!-- 主內容區 -->
                <Grid Grid.Row="1" Margin="22,18,22,16">
                    <Grid>
                        <!-- 語言選擇頁面 -->
                        <Grid x:Name="StepLanguage" Opacity="1" RenderTransformOrigin="0.5,0.5">
                            <Grid.RenderTransform>
                                <TranslateTransform x:Name="StepLanguageTransform" />
                            </Grid.RenderTransform>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <TextBlock x:Name="LanguageHeaderText" Text="Choose Language" Foreground="{StaticResource TextBrush}" FontSize="22" FontWeight="SemiBold" />

                            <Grid Grid.Row="1" Margin="0,18,0,0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <RadioButton x:Name="LangZh" Style="{StaticResource LanguageRadio}" GroupName="lang" Tag="中" Content="中文" Checked="LanguageRadio_OnChecked" />
                                <RadioButton x:Name="LangEn" Grid.Row="1" Margin="0,12,0,0" Style="{StaticResource LanguageRadio}" GroupName="lang" Tag="EN" Content="English" Checked="LanguageRadio_OnChecked" />
                            </Grid>
                        </Grid>

                        <!-- 主題選擇頁面 -->
                        <Grid x:Name="StepTheme" Opacity="0" Visibility="Collapsed" RenderTransformOrigin="0.5,0.5">
                            <Grid.RenderTransform>
                                <TranslateTransform x:Name="StepThemeTransform" />
                            </Grid.RenderTransform>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <TextBlock x:Name="ThemeHeaderText" Text="Choose Theme" Foreground="{StaticResource TextBrush}" FontSize="22" FontWeight="SemiBold" />

                            <Grid Grid.Row="1" Margin="0,16,0,0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <!-- 搜尋框 -->
                                <Grid>
                                    <TextBox x:Name="ThemeSearch" 
                                             Height="38" 
                                             Padding="36,8,12,8"
                                             Style="{StaticResource RoundedTextBox}" 
                                             TextChanged="ThemeSearch_OnTextChanged" />

                                    <!-- 搜尋圖標 -->
                                    <Path Data="M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z"
                                          Fill="{StaticResource SubTextBrush}" 
                                          Width="16" Height="16"
                                          Stretch="Uniform"
                                          Margin="12,0,0,0"
                                          VerticalAlignment="Center" 
                                          HorizontalAlignment="Left"
                                          IsHitTestVisible="False" />

                                    <TextBlock x:Name="ThemeSearchHint" 
                                               Margin="38,0,0,0" 
                                               VerticalAlignment="Center" 
                                               Foreground="{StaticResource SubTextBrush}" 
                                               IsHitTestVisible="False" 
                                               Text="Search themes...">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Collapsed" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Text, ElementName=ThemeSearch}" Value="">
                                                        <Setter Property="Visibility" Value="Visible" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Grid>

                                <!-- 主題列表 (網格佈局) -->
                                <ListBox x:Name="ThemeList" 
                                         Grid.Row="1" 
                                         Margin="0,12,0,0" 
                                         SelectionChanged="ThemeList_OnSelectionChanged" 
                                         PreviewMouseWheel="ThemeList_OnPreviewMouseWheel" 
                                         ItemContainerStyle="{StaticResource ThemeListItem}" 
                                         ScrollViewer.HorizontalScrollBarVisibility="Disabled" 
                                         ScrollViewer.VerticalScrollBarVisibility="Auto" 
                                         ScrollViewer.PanningMode="VerticalOnly" 
                                         ScrollViewer.CanContentScroll="False" 
                                         HorizontalContentAlignment="Stretch">
                                    <ListBox.Resources>
                                        <Style TargetType="ScrollBar" BasedOn="{StaticResource ThemeScrollBar}" />
                                    </ListBox.Resources>

                                    <!-- 網格佈局 - 2列 -->
                                    <ListBox.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <UniformGrid Columns="2" />
                                        </ItemsPanelTemplate>
                                    </ListBox.ItemsPanel>

                                    <!-- 主題項目模板 -->
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <Grid Height="180" Margin="6">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="140" />
                                                    <RowDefinition Height="40" />
                                                </Grid.RowDefinitions>

                                                <!-- 預覽圖區域 -->
                                                <Border Grid.Row="0" Background="#0D1428" CornerRadius="12,12,0,0" ClipToBounds="True">
                                                    <Grid>
                                                        <!-- 如果有圖片就顯示圖片 -->
                                                        <Image Source="{Binding ImageUri}" 
                                                               Stretch="UniformToFill" 
                                                               RenderOptions.BitmapScalingMode="HighQuality" />

                                                        <!-- 沒有圖片就顯示 Logo 文字 -->
                                                        <Grid>
                                                            <Grid.Style>
                                                                <Style TargetType="Grid">
                                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding ImageUri}" Value="{x:Null}">
                                                                            <Setter Property="Visibility" Value="Visible" />
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Grid.Style>

                                                            <!-- Logo 背景圓形 -->
                                                            <Ellipse Width="60" Height="60" Fill="{Binding AccentBrush}" Opacity="0.2" />
                                                            <TextBlock Text="{Binding LogoText}" 
                                                                       Foreground="{Binding AccentBrush}" 
                                                                       FontSize="24" 
                                                                       FontWeight="Bold" 
                                                                       HorizontalAlignment="Center" 
                                                                       VerticalAlignment="Center" />
                                                        </Grid>

                                                        <!-- 右下角顏色預覽點 -->
                                                        <StackPanel Orientation="Horizontal" 
                                                                    HorizontalAlignment="Right" 
                                                                    VerticalAlignment="Bottom" 
                                                                    Margin="0,0,10,10">
                                                            <Ellipse Width="10" Height="10" Fill="{Binding AccentBrush}" Margin="0,0,4,0" />
                                                            <Ellipse Width="10" Height="10" Fill="{Binding AccentBrush}" Opacity="0.7" Margin="0,0,4,0" />
                                                            <Ellipse Width="10" Height="10" Fill="{Binding AccentBrush}" Opacity="0.4" />
                                                        </StackPanel>
                                                    </Grid>
                                                </Border>

                                                <!-- 主題名稱區域 -->
                                                <Border Grid.Row="1" Background="#0D1428" CornerRadius="0,0,12,12" Padding="12,0">
                                                    <Grid VerticalAlignment="Center">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*" />
                                                            <ColumnDefinition Width="Auto" />
                                                        </Grid.ColumnDefinitions>

                                                        <TextBlock Text="{Binding Name}" 
                                                                   Foreground="{StaticResource TextBrush}" 
                                                                   FontWeight="SemiBold" 
                                                                   FontSize="13"
                                                                   VerticalAlignment="Center" 
                                                                   TextTrimming="CharacterEllipsis" />

                                                        <!-- 選中時的勾選圖標 -->
                                                        <Path Grid.Column="1" 
                                                              Data="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"
                                                              Fill="{StaticResource AccentBrush}"
                                                              Width="16" Height="16"
                                                              Stretch="Uniform"
                                                              VerticalAlignment="Center">
                                                            <Path.Style>
                                                                <Style TargetType="Path">
                                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListBoxItem}}" Value="True">
                                                                            <Setter Property="Visibility" Value="Visible" />
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Path.Style>
                                                        </Path>
                                                    </Grid>
                                                </Border>
                                            </Grid>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </Grid>
                        </Grid>

                        <!-- Snackbar 提示 -->
                        <Grid x:Name="Snackbar" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="0,0,0,0" Opacity="0" IsHitTestVisible="False">
                            <Border Background="#0D1428" CornerRadius="12" Padding="12" BorderBrush="#1F315C" BorderThickness="1">
                                <StackPanel Orientation="Horizontal">
                                    <Ellipse Width="8" Height="8" Fill="{StaticResource AccentBrush}" Margin="0,0,10,0" VerticalAlignment="Center" />
                                    <TextBlock x:Name="SnackbarText" Foreground="{StaticResource TextBrush}" />
                                </StackPanel>
                            </Border>
                        </Grid>

                    </Grid>
                </Grid>

                <!-- 底部按鈕區 -->
                <Grid Grid.Row="2" Margin="22,0,22,18">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <Button x:Name="BackButton" Grid.Column="0" Style="{StaticResource GhostButton}" Content="Back" Width="100" Click="BackButton_OnClick" IsEnabled="False" />
                    <Button x:Name="NextButton" Grid.Column="1" HorizontalAlignment="Center" Style="{StaticResource FlatButton}" Content="Next" Width="100" Click="NextButton_OnClick" />
                    <Button x:Name="FinishButton" Grid.Column="2" HorizontalAlignment="Right" Style="{StaticResource FlatButton}" Content="Finish" Width="100" Click="FinishButton_OnClick" Visibility="Collapsed" />
                </Grid>

            </Grid>
        </Border>
    </Grid>
</Window>