<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="Executor.SetupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Executor"
        mc:Ignorable="d"
        Title="Setup"
        Width="600" Height="560"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="True"
        SnapsToDevicePixels="True" UseLayoutRounding="True"
        TextOptions.TextFormattingMode="Display" TextOptions.TextRenderingMode="Grayscale" TextOptions.TextHintingMode="Fixed">

    <Window.Resources>
        <!-- 石墨配色系統 -->
        <Color x:Key="AccentColor">#E8E8E8</Color>
        <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}" />
        <SolidColorBrush x:Key="PanelBrush" Color="#141414" />
        <SolidColorBrush x:Key="PanelBrush2" Color="#1A1A1A" />
        <SolidColorBrush x:Key="TextBrush" Color="#ECECEC" />
        <SolidColorBrush x:Key="SubTextBrush" Color="#888888" />
        <SolidColorBrush x:Key="FieldBorderBrush" Color="#2E2E2E" />
        <SolidColorBrush x:Key="FieldBrush" Color="#1F1F1F" />
        <SolidColorBrush x:Key="HighlightBrush" Color="#2A2A2A" />

        <!-- 自訂捲軸 -->
        <Style x:Key="ThemeScrollBar" TargetType="ScrollBar">
            <Setter Property="Width" Value="6" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid Width="{TemplateBinding Width}" Background="Transparent">
                            <Track x:Name="PART_Track" IsDirectionReversed="True">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Command="ScrollBar.LineUpCommand" Opacity="0" IsHitTestVisible="False" />
                                </Track.DecreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb>
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Border x:Name="ThumbBd" Background="#383838" CornerRadius="3" Margin="1,2,1,2" />
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="ThumbBd" Property="Background" Value="#505050" />
                                                    </Trigger>
                                                    <Trigger Property="IsDragging" Value="True">
                                                        <Setter TargetName="ThumbBd" Property="Background" Value="#707070" />
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Command="ScrollBar.LineDownCommand" Opacity="0" IsHitTestVisible="False" />
                                </Track.IncreaseRepeatButton>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 扁平按鈕 -->
        <Style x:Key="FlatButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="{StaticResource SubTextBrush}" />
            <Setter Property="Padding" Value="14,8" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}" CornerRadius="4" BorderBrush="{StaticResource FieldBorderBrush}" BorderThickness="1">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="{StaticResource HighlightBrush}" />
                                <Setter Property="Foreground" Value="{StaticResource TextBrush}" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.65" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.3" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 幽靈按鈕 (Back) -->
        <Style x:Key="GhostButton" TargetType="Button" BasedOn="{StaticResource FlatButton}">
            <Setter Property="BorderThickness" Value="0" />
        </Style>

        <!-- 關閉按鈕 -->
        <Style x:Key="CloseButton" TargetType="Button">
            <Setter Property="Width" Value="28" />
            <Setter Property="Height" Value="28" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="{StaticResource SubTextBrush}" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}" CornerRadius="4">
                            <TextBlock Text="✕" FontSize="11" HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#3A1A1A" />
                                <Setter Property="Foreground" Value="#D05050" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.85" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 輸入框 -->
        <Style x:Key="RoundedTextBox" TargetType="TextBox">
            <Setter Property="Foreground" Value="{StaticResource TextBrush}" />
            <Setter Property="Background" Value="{StaticResource FieldBrush}" />
            <Setter Property="BorderBrush" Value="{StaticResource FieldBorderBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="12,7" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="4">
                            <ScrollViewer x:Name="PART_ContentHost" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="Bd" Property="BorderBrush" Value="#505050" />
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="BorderBrush" Value="#3C3C3C" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.4" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 語言/模式選項卡 -->
        <Style x:Key="LanguageRadio" TargetType="RadioButton">
            <Setter Property="Foreground" Value="{StaticResource SubTextBrush}" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="Card" Background="{StaticResource FieldBrush}" BorderBrush="{StaticResource FieldBorderBrush}" BorderThickness="1" CornerRadius="6" Padding="16,14">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <!-- 圖標背景 -->
                                <Border Width="34" Height="34" CornerRadius="4" Background="#282828" BorderBrush="{StaticResource FieldBorderBrush}" BorderThickness="1">
                                    <TextBlock x:Name="Icon" Text="{TemplateBinding Tag}" Foreground="{StaticResource SubTextBrush}" FontSize="13" FontWeight="SemiBold" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>

                                <!-- 文字 -->
                                <TextBlock x:Name="MainText" Grid.Column="1" Text="{TemplateBinding Content}" Foreground="{StaticResource TextBrush}" FontSize="13" FontWeight="Medium" Margin="14,0,0,0" VerticalAlignment="Center" />

                                <!-- 選中指示點 -->
                                <Ellipse x:Name="Dot" Grid.Column="2" Width="7" Height="7" Fill="#505050" VerticalAlignment="Center" />
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Card" Property="BorderBrush" Value="#404040" />
                                <Setter TargetName="Card" Property="Background" Value="#242424" />
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Card" Property="BorderBrush" Value="#606060" />
                                <Setter TargetName="Card" Property="Background" Value="#212121" />
                                <Setter TargetName="Icon" Property="Foreground" Value="{StaticResource TextBrush}" />
                                <Setter TargetName="Dot" Property="Fill" Value="{StaticResource TextBrush}" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.4" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ListBox 預設樣式 -->
        <Style TargetType="ListBox">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Foreground" Value="{StaticResource TextBrush}" />
            <Setter Property="FontSize" Value="12" />
        </Style>

        <!-- 主題列表項 -->
        <Style x:Key="ThemeListItem" TargetType="ListBoxItem">
            <Setter Property="Padding" Value="0" />
            <Setter Property="Margin" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="Outer"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                BorderThickness="1"
                                CornerRadius="4"
                                SnapsToDevicePixels="True">
                            <ContentPresenter Margin="0" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Outer" Property="Background" Value="#1E1E1E" />
                                <Setter TargetName="Outer" Property="BorderBrush" Value="#333333" />
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Outer" Property="Background" Value="#242424" />
                                <Setter TargetName="Outer" Property="BorderBrush" Value="#545454" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.4" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <Grid>
        <Border CornerRadius="10" Background="{StaticResource PanelBrush}" BorderBrush="#252525" BorderThickness="1" SnapsToDevicePixels="True">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="42" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="64" />
                </Grid.RowDefinitions>

                <!-- ── 標題欄 ── -->
                <Border Grid.Row="0" Background="{StaticResource PanelBrush2}" CornerRadius="10,10,0,0"
                        MouseLeftButtonDown="TitleBar_OnMouseLeftButtonDown">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <!-- 左：三點裝飾 -->
                        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="16,0,0,0">
                            <Ellipse Width="7" Height="7" Fill="#3A3A3A" Margin="0,0,6,0" />
                            <Ellipse Width="7" Height="7" Fill="#3A3A3A" Margin="0,0,6,0" />
                            <Ellipse Width="7" Height="7" Fill="#3A3A3A" />
                        </StackPanel>

                        <!-- 中：標題居中 -->
                        <TextBlock x:Name="TitleText" Grid.Column="1"
                                   Text="Setup"
                                   Foreground="{StaticResource SubTextBrush}"
                                   FontSize="12" FontFamily="Segoe UI"
                                   HorizontalAlignment="Center" VerticalAlignment="Center" />

                        <!-- 右：關閉按鈕 -->
                        <Button Grid.Column="2" Margin="0,0,10,0" Style="{StaticResource CloseButton}" Click="CloseButton_OnClick" />
                    </Grid>
                </Border>
                
                <!-- ── 主內容區 ── -->
                <Grid Grid.Row="1" Margin="26,22,26,14">

                    <!-- 步驟 0 ── 語言選擇 -->
                    <Grid x:Name="StepLanguage" Opacity="1" RenderTransformOrigin="0.5,0.5">
                        <Grid.RenderTransform>
                            <TranslateTransform x:Name="StepLanguageTransform" />
                        </Grid.RenderTransform>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <TextBlock x:Name="LanguageHeaderText" Text="Choose Language" Foreground="{StaticResource TextBrush}" FontSize="20" FontWeight="SemiBold" FontFamily="Segoe UI" />
                        <Rectangle Grid.Row="1" Height="1" Fill="{StaticResource FieldBorderBrush}" Margin="0,14,0,20" />

                        <Grid Grid.Row="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <RadioButton x:Name="LangZh" Style="{StaticResource LanguageRadio}" GroupName="lang" Tag="中" Content="中文" Checked="LanguageRadio_OnChecked" />
                            <RadioButton x:Name="LangEn" Grid.Row="1" Margin="0,10,0,0" Style="{StaticResource LanguageRadio}" GroupName="lang" Tag="EN" Content="English" Checked="LanguageRadio_OnChecked" />
                        </Grid>
                    </Grid>

                    <!-- 步驟 1 ── 注入模式 -->
                    <Grid x:Name="StepInjectionMode" Opacity="0" Visibility="Collapsed" RenderTransformOrigin="0.5,0.5">
                        <Grid.RenderTransform>
                            <TranslateTransform x:Name="StepInjectionModeTransform" />
                        </Grid.RenderTransform>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <TextBlock x:Name="InjectionModeHeaderText" Text="Choose Injection Mode" Foreground="{StaticResource TextBrush}" FontSize="20" FontWeight="SemiBold" FontFamily="Segoe UI" />
                        <Rectangle Grid.Row="1" Height="1" Fill="{StaticResource FieldBorderBrush}" Margin="0,14,0,20" />

                        <Grid Grid.Row="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <RadioButton x:Name="ModeInternal" Style="{StaticResource LanguageRadio}" GroupName="mode" Tag="internal" Content="Internal" Checked="InjectionModeRadio_OnChecked" />
                            <RadioButton x:Name="ModeExternal" Grid.Row="1" Margin="0,10,0,0" Style="{StaticResource LanguageRadio}" GroupName="mode" Tag="external" Content="External" Checked="InjectionModeRadio_OnChecked" />
                        </Grid>
                    </Grid>

                    <!-- 步驟 2 ── 主題選擇 -->
                    <Grid x:Name="StepTheme" Opacity="0" Visibility="Collapsed" RenderTransformOrigin="0.5,0.5">
                        <Grid.RenderTransform>
                            <TranslateTransform x:Name="StepThemeTransform" />
                        </Grid.RenderTransform>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <TextBlock x:Name="ThemeHeaderText" Text="Choose Theme" Foreground="{StaticResource TextBrush}" FontSize="20" FontWeight="SemiBold" FontFamily="Segoe UI" />
                        <Rectangle Grid.Row="1" Height="1" Fill="{StaticResource FieldBorderBrush}" Margin="0,14,0,16" />

                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="12" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <!-- 左欄：主題清單 -->
                            <Border Grid.Column="0" BorderBrush="{StaticResource FieldBorderBrush}" BorderThickness="1" CornerRadius="6">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>

                                    <!-- 搜尋框 -->
                                    <Grid Grid.Row="0" Margin="10,10,10,8">
                                        <TextBox x:Name="ThemeSearch"
                                                 Height="30"
                                                 Padding="28,5,8,5"
                                                 Style="{StaticResource RoundedTextBox}"
                                                 TextChanged="ThemeSearch_OnTextChanged" />

                                        <Path Data="M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z"
                                              Fill="{StaticResource SubTextBrush}"
                                              Width="12" Height="12"
                                              Stretch="Uniform"
                                              Margin="9,0,0,0"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Left"
                                              IsHitTestVisible="False" />

                                        <TextBlock x:Name="ThemeSearchHint"
                                                   Margin="28,0,0,0"
                                                   VerticalAlignment="Center"
                                                   Foreground="{StaticResource SubTextBrush}"
                                                   IsHitTestVisible="False"
                                                   Text="Search themes..."
                                                   FontSize="11">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Text, ElementName=ThemeSearch}" Value="">
                                                            <Setter Property="Visibility" Value="Visible" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Grid>

                                    <Rectangle Grid.Row="0" Height="1" Fill="{StaticResource FieldBorderBrush}" VerticalAlignment="Bottom" Margin="0,0,0,-1" />

                                    <!-- 主題列表 -->
                                    <ListBox x:Name="ThemeList"
                                             Grid.Row="1"
                                             Margin="6,6,6,6"
                                             SelectionChanged="ThemeList_OnSelectionChanged"
                                             PreviewMouseWheel="ThemeList_OnPreviewMouseWheel"
                                             ItemContainerStyle="{StaticResource ThemeListItem}"
                                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                             ScrollViewer.VerticalScrollBarVisibility="Auto"
                                             ScrollViewer.PanningMode="VerticalOnly"
                                             ScrollViewer.CanContentScroll="False"
                                             HorizontalContentAlignment="Stretch"
                                             Background="Transparent"
                                             BorderThickness="0">
                                        <ListBox.Resources>
                                            <Style TargetType="ScrollBar" BasedOn="{StaticResource ThemeScrollBar}" />
                                        </ListBox.Resources>

                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <Grid Height="44" Margin="2,1">
                                                    <Rectangle Width="3" HorizontalAlignment="Left" Fill="{Binding AccentBrush}" RadiusX="1.5" RadiusY="1.5" Margin="2,10,0,10">
                                                        <Rectangle.Style>
                                                            <Style TargetType="Rectangle">
                                                                <Setter Property="Opacity" Value="0" />
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListBoxItem}}" Value="True">
                                                                        <Setter Property="Opacity" Value="1" />
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Rectangle.Style>
                                                    </Rectangle>

                                                    <TextBlock Text="{Binding DisplayName}"
                                                               Foreground="{StaticResource TextBrush}"
                                                               FontSize="12"
                                                               FontFamily="Segoe UI"
                                                               VerticalAlignment="Center"
                                                               Margin="14,0,0,0" />

                                                    <Path Data="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"
                                                          Fill="{StaticResource SubTextBrush}"
                                                          Width="13" Height="13"
                                                          Stretch="Uniform"
                                                          VerticalAlignment="Center"
                                                          HorizontalAlignment="Right"
                                                          Margin="0,0,10,0">
                                                        <Path.Style>
                                                            <Style TargetType="Path">
                                                                <Setter Property="Visibility" Value="Collapsed" />
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListBoxItem}}" Value="True">
                                                                        <Setter Property="Visibility" Value="Visible" />
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Path.Style>
                                                    </Path>
                                                </Grid>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>
                                </Grid>
                            </Border>

                            <!-- 右欄：預覽 -->
                            <Border Grid.Column="2" BorderBrush="{StaticResource FieldBorderBrush}" BorderThickness="1" CornerRadius="6">
                                <Grid>
                                    <Image Stretch="Uniform"
                                           Width="120" Height="120"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Source="{Binding SelectedItem.ImageUri, ElementName=ThemeList}" />

                                    <TextBlock FontSize="28"
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource SubTextBrush}"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               Text="{Binding SelectedItem.LogoText, ElementName=ThemeList}">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Collapsed" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding SelectedItem.ImageUri, ElementName=ThemeList}" Value="{x:Null}">
                                                        <Setter Property="Visibility" Value="Visible" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Grid>
                            </Border>
                        </Grid>
                    </Grid>

                    <!-- Snackbar 提示 -->
                    <Grid x:Name="Snackbar" VerticalAlignment="Bottom" HorizontalAlignment="Left" Opacity="0" IsHitTestVisible="False">
                        <Border Background="#1A1A1A" CornerRadius="6" Padding="12,8" BorderBrush="#333333" BorderThickness="1">
                            <StackPanel Orientation="Horizontal">
                                <Rectangle Width="3" Height="12" Fill="{StaticResource SubTextBrush}" RadiusX="1.5" RadiusY="1.5" Margin="0,0,10,0" VerticalAlignment="Center" />
                                <TextBlock x:Name="SnackbarText" Foreground="{StaticResource TextBrush}" FontSize="12" FontFamily="Segoe UI" />
                            </StackPanel>
                        </Border>
                    </Grid>

                </Grid>

                <!-- ── 底部按鈕列 ── -->
                <Grid Grid.Row="2">
                    <Rectangle Height="1" VerticalAlignment="Top" Fill="{StaticResource FieldBorderBrush}" />
                    <Grid Margin="22,0,22,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="90" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <Button x:Name="BackButton" Grid.Column="0"
                                Style="{StaticResource GhostButton}"
                                Content="Back" Width="90" Height="32"
                                Click="BackButton_OnClick" IsEnabled="False"
                                VerticalAlignment="Center" />

                        <!-- 步驟指示點：由 code-behind 控制 Fill -->
                        <StackPanel Grid.Column="1" Orientation="Horizontal"
                                    HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Ellipse x:Name="StepDot0" Width="6" Height="6" Fill="#606060" Margin="4,0" />
                            <Ellipse x:Name="StepDot1" Width="6" Height="6" Fill="#2C2C2C" Margin="4,0" />
                            <Ellipse x:Name="StepDot2" Width="6" Height="6" Fill="#2C2C2C" Margin="4,0" />
                        </StackPanel>

                        <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                            <Button x:Name="NextButton"
                                    Style="{StaticResource FlatButton}"
                                    Content="Next" Width="90" Height="32"
                                    Click="NextButton_OnClick" />
                            <Button x:Name="FinishButton"
                                    Style="{StaticResource FlatButton}"
                                    Content="Finish" Width="90" Height="32"
                                    Click="FinishButton_OnClick"
                                    Visibility="Collapsed" Margin="8,0,0,0" />
                        </StackPanel>
                    </Grid>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>