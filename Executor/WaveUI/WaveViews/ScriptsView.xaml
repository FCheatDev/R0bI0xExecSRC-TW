<UserControl x:Class="Executor.WaveUI.WaveViews.ScriptsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:wave="clr-namespace:Executor.WaveUI"
             mc:Ignorable="d"
             x:Name="Root"
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <Style x:Key="HoverActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#1E1E1E" />
            <Setter Property="Foreground" Value="#EDEDED" />
            <Setter Property="BorderBrush" Value="#202020" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="2" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5,1,5,1" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="ScrollBar">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="#6FFFFFFF" />
            <Setter Property="MinWidth" Value="10" />
            <Setter Property="MinHeight" Value="10" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid Background="{TemplateBinding Background}" Width="10" SnapsToDevicePixels="True">
                            <Track x:Name="PART_Track" IsDirectionReversed="True" Width="10">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Command="ScrollBar.PageUpCommand" Opacity="0" Focusable="False" Width="0" />
                                </Track.DecreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb Background="{TemplateBinding Foreground}" Width="10">
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="5" Width="10" />
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Command="ScrollBar.PageDownCommand" Opacity="0" Focusable="False" Width="0" />
                                </Track.IncreaseRepeatButton>
                            </Track>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="Orientation" Value="Horizontal">
                                <Setter TargetName="PART_Track" Property="Height" Value="10" />
                                <Setter TargetName="PART_Track" Property="Width" Value="Auto" />
                            </Trigger>
                            <Trigger Property="Orientation" Value="Vertical">
                                <Setter TargetName="PART_Track" Property="Width" Value="10" />
                                <Setter TargetName="PART_Track" Property="Height" Value="Auto" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Background="#0C0C0C" Margin="0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="280" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Column="0" Grid.Row="0" Margin="0,0,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Border Background="#FF111111" BorderBrush="#202020" BorderThickness="1" CornerRadius="10" Height="36" Padding="12,0" VerticalAlignment="Center" Margin="10,5,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="SearchBox"
                             Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}"
                             Background="Transparent" Foreground="#EDEDED" BorderThickness="0"
                             CaretBrush="#FFFFFF"
                             VerticalContentAlignment="Center" FontSize="12"
                             KeyDown="SearchBox_OnKeyDown" FontFamily="Arial Black" />
                    <Button Grid.Column="1" Width="30" Height="30" Background="Transparent" BorderThickness="0" Cursor="None" IsHitTestVisible="False" Focusable="False">
                        <wave:WaveTintIcon IconName="search" Width="14" Height="14" Opacity="0.85" TintBrush="#EDEDED" IsHitTestVisible="False" />
                    </Button>
                </Grid>
            </Border>

            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="10,5,0,0">
                <Button Width="36" Height="36" Background="#0E0E0E" BorderBrush="#202020" BorderThickness="1" Cursor="Hand" Click="PrevPage_OnClick">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="10">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                    <wave:WaveIcon IconName="left" Width="14" Height="14" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center" />
                </Button>
                <Button Width="36" Height="36" Background="#0E0E0E" BorderBrush="#202020" BorderThickness="1" Cursor="Hand" Margin="5,0,0,0" Click="NextPage_OnClick">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="10">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                    <wave:WaveIcon IconName="right" Width="14" Height="14" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center" />
                </Button>
            </StackPanel>
        </Grid>

        <Border Grid.Column="1" Grid.Row="0" Grid.RowSpan="2" Background="Black" BorderBrush="#202020" 
                Margin="0">
            <Grid Margin="14">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="{Binding ElementName=Root, Path=ScriptsRightTitle}" Foreground="#EDEDED" FontWeight="SemiBold" FontSize="14" FontFamily="Arial Black" />
                <TextBlock Grid.Row="1" Text="{Binding ElementName=Root, Path=ScriptsRightSubtitle}" Foreground="#9AA0A6" FontSize="12" Margin="0,20,0,0" TextWrapping="Wrap" />
                <Border Grid.Row="2"
                        Background="#0C0C0C"
                        BorderBrush="#202020"
                        BorderThickness="1"
                        Margin="0,16,0,0"
                        Padding="12">
                    <StackPanel>
                        <TextBlock Foreground="#EDEDED" FontSize="12" FontFamily="Consolas" Margin="0,0,0,6">
                            <Run Text="{Binding ElementName=Root, Path=ScriptStatusKeyLabel, Mode=OneWay}" />
                            <Run Text="{Binding ElementName=Root, Path=SelectedScriptKeyStatus, Mode=OneWay}" FontWeight="SemiBold" />
                        </TextBlock>
                        <TextBlock Foreground="#EDEDED" FontSize="12" FontFamily="Consolas" Margin="0,0,0,6">
                            <Run Text="{Binding ElementName=Root, Path=ScriptStatusModeLabel, Mode=OneWay}" />
                            <Run Text="{Binding ElementName=Root, Path=SelectedScriptModeStatus, Mode=OneWay}" FontWeight="SemiBold" />
                        </TextBlock>
                        <TextBlock Foreground="#EDEDED" FontSize="12" FontFamily="Consolas">
                            <Run Text="{Binding ElementName=Root, Path=ScriptStatusVerifyLabel, Mode=OneWay}" />
                            <Run Text="{Binding ElementName=Root, Path=SelectedScriptVerifyStatus, Mode=OneWay}" FontWeight="SemiBold" />
                        </TextBlock>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <ScrollViewer Grid.Column="0" Grid.Row="1" VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Disabled" CanContentScroll="False" Margin="0,0,10,0" Padding="5,0,5,0">
            <ItemsControl ItemsSource="{Binding Scripts}" Margin="10,0,0,0">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel ItemWidth="220" ItemHeight="150" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <!-- 只用一層 Border，四邊都有邊框 -->
                        <Border Width="220" Height="150" CornerRadius="5" 
                                Background="Transparent" 
                                BorderBrush="#323232" 
                                BorderThickness="1" 
                                Margin="0,0,12,12" 
                                Cursor="Hand" 
                                x:Name="CardRoot"
                                PreviewMouseLeftButtonDown="ScriptCard_OnMouseLeftButtonDown"
                                >
                            <Border CornerRadius="5" ClipToBounds="True">
                                <Grid>
                                    <Image x:Name="ScriptImage" Source="{Binding ImageUrl}" Stretch="UniformToFill" ImageFailed="ScriptImage_OnImageFailed">
                                        <Image.Style>
                                            <Style TargetType="Image">
                                                <Setter Property="Visibility" Value="Visible" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding HasImage}" Value="False">
                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Image.Style>
                                    </Image>

                                    <Border Background="#141414">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Visibility" Value="Collapsed" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding HasImage}" Value="False">
                                                        <Setter Property="Visibility" Value="Visible" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <Grid>
                                            <Image x:Name="MissingImage" Source="pack://siteoforigin:,,,/assets/waveUI/404.png" Stretch="UniformToFill" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" ImageFailed="MissingImage_OnImageFailed" />
                                            <wave:WaveIcon x:Name="MissingFallbackIcon" IconName="404" Width="80" Height="80" Stretch="Uniform" Opacity="0.9" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed" />
                                            <TextBlock x:Name="MissingFallbackText" Text="404" Foreground="#EDEDED" FontSize="26" FontFamily="Arial Black" HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="0.15" Visibility="Collapsed" />
                                        </Grid>
                                    </Border>

                                    <Border VerticalAlignment="Bottom" Background="#80000000" Padding="14">
                                        <StackPanel>
                                            <TextBlock Text="{Binding Title}" Foreground="#EDEDED" FontSize="12" TextTrimming="CharacterEllipsis" FontFamily="Arial Black" />
                                            <TextBlock Text="{Binding GameName}" Foreground="#9AA0A6" FontSize="11" Margin="0,4,0,0" TextTrimming="CharacterEllipsis" FontFamily="Roboto" />
                                        </StackPanel>
                                    </Border>

                                    <Border x:Name="HoverActions" Background="#66000000" CornerRadius="0" Panel.ZIndex="10">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Opacity" Value="0" />
                                                <Setter Property="IsHitTestVisible" Value="False" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding ElementName=CardRoot, Path=IsMouseOver}" Value="True">
                                                        <Setter Property="IsHitTestVisible" Value="True" />
                                                        <DataTrigger.EnterActions>
                                                            <BeginStoryboard>
                                                                <Storyboard>
                                                                    <DoubleAnimation Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:0.16" />
                                                                </Storyboard>
                                                            </BeginStoryboard>
                                                        </DataTrigger.EnterActions>
                                                        <DataTrigger.ExitActions>
                                                            <BeginStoryboard>
                                                                <Storyboard>
                                                                    <DoubleAnimation Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.22" />
                                                                </Storyboard>
                                                            </BeginStoryboard>
                                                        </DataTrigger.ExitActions>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>

                                        <Grid>
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="8">
                                                <Button Content="{Binding ElementName=Root, Path=CopyButtonLabel}" Style="{StaticResource HoverActionButtonStyle}" Margin="0,0,6,0" Cursor="Hand" Click="CopyScript_OnClick" />
                                                <Button Content="{Binding ElementName=Root, Path=ExecuteButtonLabel}" Style="{StaticResource HoverActionButtonStyle}" Cursor="Hand" Click="ExecuteScript_OnClick" />
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </Grid>
                            </Border>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>