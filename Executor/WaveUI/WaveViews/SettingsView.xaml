<UserControl x:Class="Executor.WaveUI.WaveViews.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:wave="clr-namespace:Executor.WaveUI"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <SolidColorBrush x:Key="WaveBlue" Color="#1DA1F2" />

        <Style x:Key="WaveCheckBox" TargetType="CheckBox">
            <Setter Property="Width" Value="18" />
            <Setter Property="Height" Value="18" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Grid>
                            <Border x:Name="Box" Width="18" Height="18" CornerRadius="4" Background="#121212" BorderBrush="#2A2A2A" BorderThickness="1" />
                            <Path x:Name="Check" Data="M 4.2 9.4 L 7.4 12.6 L 13.8 6.2" StrokeThickness="2" Stroke="White" StrokeStartLineCap="Round" StrokeEndLineCap="Round" Visibility="Collapsed" />
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Box" Property="BorderBrush" Value="#3A3A3A" />
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Box" Property="Background" Value="{StaticResource WaveBlue}" />
                                <Setter TargetName="Box" Property="BorderBrush" Value="{StaticResource WaveBlue}" />
                                <Setter TargetName="Check" Property="Visibility" Value="Visible" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Background="#0C0C0C" Margin="0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="280" />
        </Grid.ColumnDefinitions>

        <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto" Margin="0,0,10,0">
            <StackPanel>
                <TextBlock Text="Application" Foreground="#EDEDED" FontWeight="SemiBold" FontSize="20" Margin="10,0,0,16" FontFamily="Comic Sans MS" Padding="10,10,0,0" />

                <Border Background="#0E0E0E" BorderBrush="#202020" BorderThickness="1" CornerRadius="12" Padding="16" Margin="15,0,10,12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock Text="Topmost" Foreground="#EDEDED" FontWeight="SemiBold" FontSize="14" />
                            <TextBlock Text="Allow Wave to position itself over everything else" Foreground="#9AA0A6" FontSize="12" Margin="0,6,0,0" />
                        </StackPanel>
                        <CheckBox Grid.Column="1" VerticalAlignment="Center" Style="{StaticResource WaveCheckBox}" />
                    </Grid>
                </Border>

                <Border Background="#0E0E0E" BorderBrush="#202020" BorderThickness="1" CornerRadius="12" Padding="16" Margin="15,0,10,12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock Text="Start on Boot" Foreground="#EDEDED" FontWeight="SemiBold" FontSize="14" />
                            <TextBlock Text="Automatically have Wave run when your system boots" Foreground="#9AA0A6" FontSize="12" Margin="0,6,0,0" />
                        </StackPanel>
                        <CheckBox Grid.Column="1" VerticalAlignment="Center" Style="{StaticResource WaveCheckBox}" />
                    </Grid>
                </Border>

                <Border Background="#0E0E0E" BorderBrush="#202020" BorderThickness="1" CornerRadius="12" Padding="16" Margin="15,0,10,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock Text="Transparency" Foreground="#EDEDED" FontWeight="SemiBold" FontSize="14" />
                            <TextBlock Text="Adjust Wave's window transparency (from 0.1 to 1)" Foreground="#9AA0A6" FontSize="12" Margin="0,6,0,0" />
                        </StackPanel>
                        <Border Grid.Column="1" Background="#121212" BorderBrush="#202020" BorderThickness="1" CornerRadius="8" Padding="10,6" VerticalAlignment="Center">
                            <TextBlock Text="1.0" Foreground="#EDEDED" FontSize="12" />
                        </Border>
                    </Grid>
                </Border>

                <TextBlock Text="Appearance" Foreground="#EDEDED" FontWeight="SemiBold" FontSize="20" Margin="10,18,0,10" FontFamily="Comic Sans MS" Padding="10,0,0,0" />
            </StackPanel>
        </ScrollViewer>

        <Border Grid.Column="1" Background="Black" BorderBrush="#202020" Grid.RowSpan="1">
            <Grid Margin="14">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <TextBlock Text="SETTINGS" Foreground="#EDEDED" FontWeight="SemiBold" FontSize="14" FontFamily="Arial Black" />
                <TextBlock Grid.Row="1" Text="Customize Wave to your liking" Foreground="#9AA0A6" FontSize="12" Margin="0,6,0,0" />

                <StackPanel Grid.Row="2" Margin="0,14,0,0">
                    <Border Background="#1DA1F2" CornerRadius="10" Padding="12,10" Margin="0,0,0,10">
                        <StackPanel Orientation="Horizontal">
                            <wave:WaveIcon IconName="app" Width="14" Height="14" Stretch="Uniform" />
                            <TextBlock Text="Application" Foreground="White" FontWeight="SemiBold" FontSize="14" Margin="10,0,0,0" FontFamily="Comic Sans MS" Height="22" Width="101" />
                        </StackPanel>
                    </Border>
                    <Border Background="#121212" CornerRadius="10" Padding="12,10" Margin="0,0,0,10">
                        <StackPanel Orientation="Horizontal">
                            <wave:WaveIcon IconName="appearance" Width="14" Height="14" Stretch="Uniform" />
                            <TextBlock Text="Appearance" Foreground="#EDEDED" FontWeight="SemiBold" FontSize="14" Margin="10,0,0,0" FontFamily="Comic Sans MS" />
                        </StackPanel>
                    </Border>
                    <Border Background="#121212" CornerRadius="10" Padding="12,10">
                        <StackPanel Orientation="Horizontal">
                            <wave:WaveIcon IconName="data" Width="14" Height="14" Stretch="Uniform" />
                            <TextBlock Text="Data" Foreground="#EDEDED" FontWeight="SemiBold" FontSize="14" Margin="10,0,0,0" FontFamily="Comic Sans MS" />
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
