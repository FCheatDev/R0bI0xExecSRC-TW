                                <Button Style="{StaticResource CopyIconButtonStyle}" Click="CopyMonacoDirectory_OnClick" Margin="2,0,0,0" VerticalAlignment="Center">
                                    <Button.ToolTip>
                                        <ToolTip x:Name="MonacoCopyToolTip" Style="{StaticResource CopyToolTipStyle}" Content="Copy" />
                                    </Button.ToolTip>
                                    <wave:WaveIcon IconName="copy" Width="14" Height="14" Opacity="0.9" />
                                </Button>
                            </StackPanel>
                        </StackPanel>
                        <Button Grid.Column="1" Style="{StaticResource UnderlineTextButtonStyle}" Click="OpenMonacoDirectory_OnClick" VerticalAlignment="Center">
                            <TextBlock x:Name="OpenMonacoDirectoryButtonText" Text="Open" FontSize="12" FontWeight="SemiBold" />
                        </Button>
                    </Grid>
                    <Border Background="#202020" Height="1" Margin="0,14,0,0" HorizontalAlignment="Stretch" />
                </StackPanel>

                <StackPanel Margin="15,0,10,12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock x:Name="WaveUiImagesTitleText" Text="WaveUI Resources" Foreground="#EDEDED" FontWeight="SemiBold" FontSize="14" />
                            <StackPanel Orientation="Horizontal" Margin="0,6,0,0" HorizontalAlignment="Left">
                                <TextBox Text="{Binding WaveUiResourcesPathDisplay, Mode=OneWay}" Foreground="#9AA0A6" FontSize="12" Background="Transparent" BorderThickness="0" IsReadOnly="True" />
                                <Button Style="{StaticResource CopyIconButtonStyle}" Click="CopyWaveUiResources_OnClick" Margin="2,0,0,0" VerticalAlignment="Center">
                                    <Button.ToolTip>
                                        <ToolTip x:Name="WaveUiResourcesCopyToolTip" Style="{StaticResource CopyToolTipStyle}" Content="Copy" />
                                    </Button.ToolTip>
                                    <wave:WaveIcon IconName="copy" Width="14" Height="14" Opacity="0.9" />
                                </Button>
                            </StackPanel>
                        </StackPanel>
                        <Button Grid.Column="1" Style="{StaticResource UnderlineTextButtonStyle}" Click="OpenWaveUiDirectory_OnClick" VerticalAlignment="Center">
                            <TextBlock x:Name="OpenWaveUiDirectoryButtonText" Text="Open" FontSize="12" FontWeight="SemiBold" />
                        </Button>
                    </Grid>
                    <Border Background="#202020" Height="1" Margin="0,14,0,0" HorizontalAlignment="Stretch" />
                </StackPanel>

                <StackPanel Margin="15,0,10,12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock x:Name="OpenConfigFolderTitleText" Text="Open Config Folder" Foreground="#EDEDED" FontWeight="SemiBold" FontSize="14" />
                            <TextBlock x:Name="OpenConfigFolderDescText" Text="Open the folder that contains config.cfg" Foreground="#9AA0A6" FontSize="12" Margin="0,6,0,0" />
                        </StackPanel>
                        <Button Grid.Column="1" Style="{StaticResource UnderlineTextButtonStyle}" Click="OpenConfigFolder_OnClick" VerticalAlignment="Center">
                            <TextBlock x:Name="OpenConfigFolderButtonText" Text="Open" FontSize="12" FontWeight="SemiBold" />
                        </Button>
                    </Grid>
                    <Border Background="#202020" Height="1" Margin="0,14,0,0" HorizontalAlignment="Stretch" />
                </StackPanel>

                <StackPanel Margin="15,0,10,12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock x:Name="OpenConfigFileTitleText" Text="Open config.cfg" Foreground="#EDEDED" FontWeight="SemiBold" FontSize="14" />
                            <TextBlock x:Name="OpenConfigFileDescText" Text="Open the config file" Foreground="#9AA0A6" FontSize="12" Margin="0,6,0,0" />
                        </StackPanel>
                        <Button Grid.Column="1" Style="{StaticResource UnderlineTextButtonStyle}" Click="OpenConfigFile_OnClick" VerticalAlignment="Center">
                            <TextBlock x:Name="OpenConfigFileButtonText" Text="Open" FontSize="12" FontWeight="SemiBold" />
                        </Button>
                    </Grid>
                    <Border Background="#202020" Height="1" Margin="0,14,0,0" HorizontalAlignment="Stretch" />
                </StackPanel>

                <StackPanel Margin="15,0,10,12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock x:Name="OpenVersionFileTitleText" Text="Open version.json" Foreground="#EDEDED" FontWeight="SemiBold" FontSize="14" />
                            <TextBlock x:Name="OpenVersionFileDescText" Text="Open the version file" Foreground="#9AA0A6" FontSize="12" Margin="0,6,0,0" />
                        </StackPanel>
                        <Button Grid.Column="1" Style="{StaticResource UnderlineTextButtonStyle}" Click="OpenVersionFile_OnClick" VerticalAlignment="Center">
                            <TextBlock x:Name="OpenVersionFileButtonText" Text="Open" FontSize="12" FontWeight="SemiBold" />
                        </Button>
                    </Grid>
                    <Border Background="#202020" Height="2" Margin="0,14,0,0" HorizontalAlignment="Stretch" />
                </StackPanel>

                <StackPanel Margin="15,0,10,12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock x:Name="OpenLogFolderTitleText" Text="Log Folder" Foreground="#EDEDED" FontWeight="SemiBold" FontSize="14" />
                            <TextBlock x:Name="OpenLogFolderDescText" Text="Open the log folder" Foreground="#9AA0A6" FontSize="12" Margin="0,6,0,0" />
                        </StackPanel>
                        <Button Grid.Column="1" Style="{StaticResource UnderlineTextButtonStyle}" Click="OpenLogFolder_OnClick" VerticalAlignment="Center">
                            <TextBlock x:Name="OpenLogFolderButtonText" Text="Open" FontSize="12" FontWeight="SemiBold" />
                        </Button>
                    </Grid>
                    <Border Background="#202020" Height="2" Margin="0,14,0,0" HorizontalAlignment="Stretch" />
                </StackPanel>

                <TextBlock x:Name="ApisSection" Text="APIs" Foreground="#EDEDED" FontWeight="SemiBold" FontSize="20" Margin="10,18,0,10" FontFamily="{DynamicResource WaveHeadingFontFamily}" Padding="10,0,0,0" />

                <StackPanel Margin="15,0,10,12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <StackPanel>
                            <TextBlock x:Name="ChooseApisTitleText" Text="ChooseAPIs" Foreground="#EDEDED" FontWeight="SemiBold" FontSize="14" />
                        </StackPanel>

                        <Button x:Name="ChooseApiButton" Grid.Column="1" Style="{StaticResource UnderlineTextButtonStyle}" Click="ChooseApiButton_OnClick" VerticalAlignment="Center">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock x:Name="CurrentApiText" Text="-" FontSize="12" FontWeight="SemiBold" />
                                <TextBlock Text="▼" Foreground="#9AA0A6" FontSize="10" Margin="10,1,0,0" />
                            </StackPanel>
                        </Button>
                    </Grid>
                    <Border Background="#202020" Height="2" Margin="0,14,0,0" HorizontalAlignment="Stretch" />
                </StackPanel>

                <TextBlock x:Name="ApiDebugSection" Text="Debug" Foreground="#EDEDED" FontWeight="SemiBold" FontSize="20" Margin="10,18,0,10" FontFamily="{DynamicResource WaveHeadingFontFamily}" Padding="10,0,0,0" />

                <StackPanel Margin="15,0,10,12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock x:Name="MultiInstanceTitleText" Text="Multiple Instances" Foreground="#EDEDED" FontWeight="SemiBold" FontSize="14" />
                            <TextBlock x:Name="MultiInstanceDescText" Text="Allow running multiple Wave windows" Foreground="#9AA0A6" FontSize="12" Margin="0,6,0,0" />
                        </StackPanel>
                        <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock x:Name="MultiInstanceValueText" Text="Not Allowed" Foreground="#EDEDED" FontSize="12" Margin="0,0,10,0" VerticalAlignment="Center" />
                            <CheckBox x:Name="MultiInstanceCheckBox" Grid.Column="1" VerticalAlignment="Center" Style="{StaticResource WaveSwitch}" Checked="MultiInstanceCheckBox_OnChanged" Unchecked="MultiInstanceCheckBox_OnChanged" />
                        </StackPanel>
                    </Grid>
                    <Border Background="#202020" Height="1" Margin="0,14,0,0" HorizontalAlignment="Stretch" />
                </StackPanel>

                <StackPanel Margin="15,0,10,12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock x:Name="UnlimitedTabsTitleText" Text="Unlimited Tabs" Foreground="#EDEDED" FontWeight="SemiBold" FontSize="14" />
                            <TextBlock x:Name="UnlimitedTabsDescText" Text="Remove editor tab limit" Foreground="#9AA0A6" FontSize="12" Margin="0,6,0,0" />
                        </StackPanel>
                        <CheckBox x:Name="UnlimitedTabsCheckBox" Grid.Column="1" VerticalAlignment="Center" Style="{StaticResource WaveCheckBox}" Checked="UnlimitedTabsCheckBox_OnChanged" Unchecked="UnlimitedTabsCheckBox_OnChanged" />
                    </Grid>
                    <Border Background="#202020" Height="1" Margin="0,14,0,0" HorizontalAlignment="Stretch" />
                </StackPanel>

                <StackPanel Margin="15,0,10,12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock x:Name="SmallWaveFpsTitleText" Text="Small Wave FPS" Foreground="#EDEDED" FontWeight="SemiBold" FontSize="14" />
                            <TextBlock x:Name="SmallWaveFpsDescText" Text="Adjust small Wave frame rate" Foreground="#9AA0A6" FontSize="12" Margin="0,6,0,0" />
                        </StackPanel>
                        <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                            <Slider x:Name="SmallWaveFpsSlider" Minimum="30" Maximum="120" Value="60" Width="140" IsSnapToTickEnabled="True" TickFrequency="5" ValueChanged="SmallWaveFpsSlider_OnValueChanged" Style="{StaticResource WaveOpacitySlider}" />
                            <TextBlock x:Name="SmallWaveFpsValueText" Text="60" Foreground="#EDEDED" FontSize="12" Margin="10,0,0,0" Width="40" HorizontalAlignment="Left" />
                        </StackPanel>
                    </Grid>
                    <Border Background="#202020" Height="1" Margin="0,14,0,0" HorizontalAlignment="Stretch" />
                </StackPanel>

                <StackPanel Margin="15,0,10,12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock x:Name="TestPromptTitleText" Text="Test Prompt" Foreground="#EDEDED" FontWeight="SemiBold" FontSize="14" />
                            <TextBlock x:Name="TestPromptDescText" Text="Test toast/prompt" Foreground="#9AA0A6" FontSize="12" Margin="0,6,0,0" />
                        </StackPanel>
                        <Button Grid.Column="1" Style="{StaticResource UnderlineTextButtonStyle}" Click="TestPromptButton_OnClick" VerticalAlignment="Center">
                            <TextBlock x:Name="TestPromptButtonText" Text="Test" FontSize="12" FontWeight="SemiBold" />
                        </Button>
                    </Grid>
                    <Border Background="#202020" Height="1" Margin="0,14,0,0" HorizontalAlignment="Stretch" />
                </StackPanel>

                <StackPanel Margin="15,0,10,12">
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="IsAttached" Foreground="#9AA0A6" FontSize="12" />
                            <TextBlock x:Name="ApiDebugIsAttachedValueText" Grid.Column="1" Text="-" Foreground="#EDEDED" FontSize="12" />
                        </Grid>

                        <Border Background="#202020" Height="1" Margin="0,10,0,10" HorizontalAlignment="Stretch" />

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="IsRobloxOpen" Foreground="#9AA0A6" FontSize="12" />
                            <TextBlock x:Name="ApiDebugIsRobloxOpenValueText" Grid.Column="1" Text="-" Foreground="#EDEDED" FontSize="12" />
                        </Grid>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <Border Grid.Column="1" Background="Black" BorderBrush="#202020" Grid.RowSpan="1">
            <Grid Margin="14">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <TextBlock x:Name="SettingsRightTitleText" Text="SETTINGS" Foreground="#EDEDED" FontWeight="SemiBold" FontSize="14" FontFamily="{DynamicResource WaveTitleFontFamily}" />
                <DockPanel Grid.Row="1" Margin="0,6,0,0" LastChildFill="True">
                    <Border DockPanel.Dock="Right" Background="#0E0E0E" BorderBrush="#202020" BorderThickness="1" Height="28" Padding="8,0" Width="120" Margin="10,0,0,0" VerticalAlignment="Center">
                        <Grid>
                            <TextBox x:Name="SettingsSearchBox" Background="Transparent" Foreground="#EDEDED" BorderThickness="0" FontSize="12" CaretBrush="#FFFFFF"
                                     VerticalContentAlignment="Center" Padding="0,0,20,0" TextChanged="SettingsSearchBox_OnTextChanged" />
                            <TextBlock x:Name="SettingsSearchPlaceholderText" Text="Search..." Foreground="#6F7782" FontSize="12" Margin="2,0,0,0" VerticalAlignment="Center" IsHitTestVisible="False">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Text, ElementName=SettingsSearchBox}" Value="">
                                                <Setter Property="Visibility" Value="Visible" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Text, ElementName=SettingsSearchBox}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Visible" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            <wave:WaveIcon IconName="search" Width="12" Height="12" Stretch="Uniform" HorizontalAlignment="Right" VerticalAlignment="Center" Opacity="0.8" />
                        </Grid>
                    </Border>
                    <TextBlock x:Name="SettingsRightSubtitleText" Text="Customize Wave to your liking" Foreground="#9AA0A6" FontSize="12" TextWrapping="Wrap" />
                </DockPanel>

                <StackPanel Grid.Row="2" Margin="0,14,0,0">
                    <Grid Cursor="Hand" Tag="Application" Margin="0,0,0,10" MouseLeftButtonDown="RightNavItem_OnMouseLeftButtonDown">
                        <Border CornerRadius="10" Background="#121212" />
                        <Border x:Name="NavApplicationActiveBg" CornerRadius="10" Background="#121212" Opacity="1" />
                        <StackPanel Orientation="Horizontal" Margin="12,10">
                            <wave:WaveIcon IconName="app" Width="14" Height="14" Stretch="Uniform" />
                            <Grid Margin="10,0,0,0">
                                <TextBlock x:Name="NavApplicationTextInactive" Text="Application" Foreground="#EDEDED" FontWeight="SemiBold" FontSize="14" FontFamily="{DynamicResource WaveHeadingFontFamily}" Opacity="0" />
                                <TextBlock x:Name="NavApplicationTextActive" Text="Application" Foreground="White" FontWeight="SemiBold" FontSize="14" FontFamily="{DynamicResource WaveHeadingFontFamily}" Opacity="1" />
                            </Grid>
                        </StackPanel>
                    </Grid>

                    <Grid Cursor="Hand" Tag="SmallWave" Margin="0,0,0,10" MouseLeftButtonDown="RightNavItem_OnMouseLeftButtonDown">
                        <Border CornerRadius="10" Background="#121212" />
                        <Border x:Name="NavSmallWaveActiveBg" CornerRadius="10" Background="#121212" Opacity="0" />
                        <StackPanel Orientation="Horizontal" Margin="12,10">
                            <wave:WaveIcon IconName="minimize_wave" Width="14" Height="14" Stretch="Uniform" />
                            <Grid Margin="10,0,0,0">
                                <TextBlock x:Name="NavSmallWaveTextInactive" Text="Floating Ball" Foreground="#EDEDED" FontWeight="SemiBold" FontSize="14" FontFamily="{DynamicResource WaveHeadingFontFamily}" Opacity="1" />
                                <TextBlock x:Name="NavSmallWaveTextActive" Text="Floating Ball" Foreground="White" FontWeight="SemiBold" FontSize="14" FontFamily="{DynamicResource WaveHeadingFontFamily}" Opacity="0" />
                            </Grid>
                        </StackPanel>
                    </Grid>

                    <Grid Cursor="Hand" Tag="Appearance" Margin="0,0,0,10" MouseLeftButtonDown="RightNavItem_OnMouseLeftButtonDown">
                        <Border CornerRadius="10" Background="#121212" />
                        <Border x:Name="NavAppearanceActiveBg" CornerRadius="10" Background="#121212" Opacity="0" />
                        <StackPanel Orientation="Horizontal" Margin="12,10">
                            <wave:WaveIcon IconName="appearance" Width="14" Height="14" Stretch="Uniform" />
                            <Grid Margin="10,0,0,0">
                                <TextBlock x:Name="NavAppearanceTextInactive" Text="Appearance" Foreground="#EDEDED" FontWeight="SemiBold" FontSize="14" FontFamily="{DynamicResource WaveHeadingFontFamily}" Opacity="1" />
                                <TextBlock x:Name="NavAppearanceTextActive" Text="Appearance" Foreground="White" FontWeight="SemiBold" FontSize="14" FontFamily="{DynamicResource WaveHeadingFontFamily}" Opacity="0" />
                            </Grid>
                        </StackPanel>
                    </Grid>

                    <Grid Cursor="Hand" Tag="Data" MouseLeftButtonDown="RightNavItem_OnMouseLeftButtonDown">
                        <Border CornerRadius="10" Background="#121212" />
                        <Border x:Name="NavDataActiveBg" CornerRadius="10" Background="#121212" Opacity="0" />
                        <StackPanel Orientation="Horizontal" Margin="12,10">
                            <wave:WaveIcon IconName="data" Width="14" Height="14" Stretch="Uniform" />
                            <Grid Margin="10,0,0,0">
                                <TextBlock x:Name="NavDataTextInactive" Text="Data" Foreground="#EDEDED" FontWeight="SemiBold" FontSize="14" FontFamily="{DynamicResource WaveHeadingFontFamily}" Opacity="1" />
                                <TextBlock x:Name="NavDataTextActive" Text="Data" Foreground="White" FontWeight="SemiBold" FontSize="14" FontFamily="{DynamicResource WaveHeadingFontFamily}" Opacity="0" />
                            </Grid>
                        </StackPanel>
                    </Grid>

                    <Grid Cursor="Hand" Tag="APIs" Margin="0,10,0,0" MouseLeftButtonDown="RightNavItem_OnMouseLeftButtonDown">
                        <Border CornerRadius="10" Background="#121212" />
                        <Border x:Name="NavApisActiveBg" CornerRadius="10" Background="#121212" Opacity="0" />
                        <StackPanel Orientation="Horizontal" Margin="12,10">
                            <wave:WaveIcon IconName="apis" Width="14" Height="14" Stretch="Uniform" />
                            <Grid Margin="10,0,0,0">
                                <TextBlock x:Name="NavApisTextInactive" Text="APIs" Foreground="#EDEDED" FontWeight="SemiBold" FontSize="14" FontFamily="{DynamicResource WaveHeadingFontFamily}" Opacity="1" />
                                <TextBlock x:Name="NavApisTextActive" Text="APIs" Foreground="White" FontWeight="SemiBold" FontSize="14" FontFamily="{DynamicResource WaveHeadingFontFamily}" Opacity="0" />
                            </Grid>
                        </StackPanel>
                    </Grid>

                    <Grid Cursor="Hand" Tag="Debug" Margin="0,10,0,0" MouseLeftButtonDown="RightNavItem_OnMouseLeftButtonDown">
                        <Border CornerRadius="10" Background="#121212" />
                        <Border x:Name="NavDebugActiveBg" CornerRadius="10" Background="#121212" Opacity="0" />
                        <StackPanel Orientation="Horizontal" Margin="12,10">
                            <wave:WaveIcon IconName="debug" Width="14" Height="14" Stretch="Uniform" />
                            <Grid Margin="10,0,0,0">
                                <TextBlock x:Name="NavDebugTextInactive" Text="Debug" Foreground="#EDEDED" FontWeight="SemiBold" FontSize="14" FontFamily="{DynamicResource WaveHeadingFontFamily}" Opacity="1" />
                                <TextBlock x:Name="NavDebugTextActive" Text="Debug" Foreground="White" FontWeight="SemiBold" FontSize="14" FontFamily="{DynamicResource WaveHeadingFontFamily}" Opacity="0" />
                            </Grid>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Grid>
        </Border>

        <Grid x:Name="ApiModalOverlay" Grid.ColumnSpan="2" Visibility="Collapsed" Opacity="0">
            <Border Background="#80000000" MouseLeftButtonDown="ApiModalBackdrop_OnMouseLeftButtonDown" />

            <Border Width="680" Background="#0E0E0E" BorderBrush="#202020" BorderThickness="1" CornerRadius="5" Padding="16"
                    HorizontalAlignment="Center" VerticalAlignment="Center"
                    MouseLeftButtonDown="ApiModalContent_OnMouseLeftButtonDown">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock x:Name="ApiModalTitleText" Text="ChooseAPIs" Foreground="#EDEDED" FontWeight="SemiBold" FontSize="16" />
                        <Button Grid.Column="1" Style="{StaticResource NoHoverButton}" Click="CloseApiModalButton_OnClick" Width="26" Height="26">
                            <TextBlock Text="✕" Foreground="#9AA0A6" FontSize="12" VerticalAlignment="Center" HorizontalAlignment="Center" />
                        </Button>
                    </Grid>

                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,10,0,14">
                        <TextBlock x:Name="ApiModalCurrentLabelText" Text="Current:" Foreground="#9AA0A6" FontSize="12" />
                        <TextBlock Text=" " />
                        <TextBlock Text="{Binding ElementName=CurrentApiText, Path=Text}" Foreground="#EDEDED" FontSize="12" />
                    </StackPanel>

                    <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" MaxHeight="420">
                        <ItemsControl x:Name="ApiItemsControl" ItemsSource="{Binding ApiItems}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Columns="5" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Style="{StaticResource ApiTileButton}" Click="ApiTileButton_OnClick" Tag="{Binding}">
                                        <StackPanel>
                                            <TextBlock Text="{Binding Name}" Foreground="#EDEDED" FontWeight="SemiBold" FontSize="12" TextWrapping="Wrap" />
                                            <TextBlock Text="{Binding SuncLine}" Foreground="#9AA0A6" FontSize="11" Margin="0,8,0,0" TextWrapping="Wrap" />
                                            <TextBlock Text="{Binding UncLine}" Foreground="#9AA0A6" FontSize="11" Margin="0,2,0,0" TextWrapping="Wrap" />
                                        </StackPanel>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
