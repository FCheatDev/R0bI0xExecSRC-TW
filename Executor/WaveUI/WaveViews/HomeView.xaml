<UserControl x:Class="Executor.WaveUI.WaveViews.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:wave="clr-namespace:Executor.WaveUI"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="Black" Margin="12,10,12,12">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2.2*" />
            <ColumnDefinition Width="2.2*" />
            <ColumnDefinition Width="1.6*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Border Grid.Column="0" Grid.Row="0" Margin="0,0,12,12" CornerRadius="12" Background="#101010" BorderBrush="#202020" BorderThickness="1">
            <Grid Margin="16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <TextBlock Text="Welcome to Wave," Foreground="#EDEDED" FontSize="18" FontWeight="SemiBold" />

                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,14,0,0">
                    <Border Background="#1DA1F2" CornerRadius="8" Padding="12,6" Margin="0,0,10,0">
                        <StackPanel Orientation="Horizontal">
                            <wave:WaveIcon IconName="globe" Width="14" Height="14" Stretch="Uniform" />
                            <TextBlock Text="Website" Foreground="White" FontWeight="SemiBold" FontSize="12" Margin="8,0,0,0" />
                        </StackPanel>
                    </Border>
                    <Border Background="#1A1A1A" CornerRadius="8" Padding="12,6">
                        <StackPanel Orientation="Horizontal">
                            <wave:WaveIcon IconName="store" Width="14" Height="14" Stretch="Uniform" />
                            <TextBlock Text="Store" Foreground="#EDEDED" FontWeight="SemiBold" FontSize="12" Margin="8,0,0,0" />
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Column="1" Grid.Row="0" Margin="0,0,12,12" CornerRadius="12" Background="#101010" BorderBrush="#202020" BorderThickness="1">
            <Grid Margin="16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <StackPanel>
                    <TextBlock Text="SUBSCRIPTION" Foreground="#9AA0A6" FontWeight="SemiBold" FontSize="12" />
                    <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                        <TextBlock Text="Key Expiry:" Foreground="#9AA0A6" FontSize="12" Width="86" />
                        <TextBlock Text="364 Days" Foreground="#1DA1F2" FontWeight="SemiBold" FontSize="12" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                        <TextBlock Text="Plan:" Foreground="#9AA0A6" FontSize="12" Width="86" />
                        <TextBlock Text="Paid" Foreground="#EDEDED" FontWeight="SemiBold" FontSize="12" />
                    </StackPanel>
                    <TextBlock Text="2:56 AM  -  12/25/2026" Foreground="#5D6066" FontSize="11" Margin="0,10,0,0" />
                </StackPanel>
            </Grid>
        </Border>

        <StackPanel Grid.Column="2" Grid.Row="0" Margin="0,0,0,12">
            <TextBlock Text="WIDGETS" Foreground="#9AA0A6" FontWeight="SemiBold" FontSize="12" Margin="6,0,0,8" />
            <Border CornerRadius="12" Background="#1DA1F2" Padding="16" Margin="0,0,0,10">
                <StackPanel>
                    <TextBlock Text="Release" Foreground="White" FontSize="16" FontWeight="SemiBold" />
                    <TextBlock Text="Wave is finally available to the public, after&#10;many months!" Foreground="White" Opacity="0.95" FontSize="12" Margin="0,8,0,0" />
                </StackPanel>
            </Border>
            <Border CornerRadius="12" Background="#1DA1F2" Padding="16" Margin="0,0,0,10">
                <StackPanel>
                    <TextBlock Text="Status" Foreground="White" FontSize="16" FontWeight="SemiBold" />
                    <TextBlock Text="Wave is currently undetected, and up-to&#10;date." Foreground="White" Opacity="0.95" FontSize="12" Margin="0,8,0,0" />
                </StackPanel>
            </Border>
            <Border CornerRadius="12" Background="#1DA1F2" Padding="16">
                <StackPanel>
                    <TextBlock Text="Discord" Foreground="White" FontSize="16" FontWeight="SemiBold" />
                    <TextBlock Text="Join our discord server for further updates,&#10;and a community." Foreground="White" Opacity="0.95" FontSize="12" Margin="0,8,0,0" />
                </StackPanel>
            </Border>
        </StackPanel>

        <Border Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" CornerRadius="12" Background="#101010" BorderBrush="#202020" BorderThickness="1" Margin="0,0,12,0">
            <Grid Margin="16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="RECENT" Foreground="#EDEDED" FontSize="14" FontWeight="SemiBold" />
                    <TextBlock Text="Edited" Foreground="#5D6066" FontSize="12" Margin="10,2,0,0" />
                </StackPanel>

                <Border Grid.Row="1" CornerRadius="10" Background="#0E0E0E" BorderBrush="#1B1B1B" BorderThickness="1" Padding="14" Margin="0,14,0,0">
                    <StackPanel Orientation="Horizontal">
                        <Border Width="34" Height="34" Background="#121212" CornerRadius="10" BorderBrush="#202020" BorderThickness="1">
                            <wave:WaveIcon IconName="file" Width="16" Height="16" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <StackPanel Margin="12,0,0,0">
                            <TextBlock Text="Untitled 1" Foreground="#EDEDED" FontWeight="SemiBold" FontSize="13" />
                            <TextBlock Text="Edited 2 mins ago" Foreground="#5D6066" FontSize="11" Margin="0,4,0,0" />
                        </StackPanel>
                    </StackPanel>
                </Border>

                <TextBlock Grid.Row="2" Text="You've reached the end of the list" Foreground="#2D2D2D" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="12" />
            </Grid>
        </Border>
    </Grid>
</UserControl>
