<UserControl x:Class="Executor.WaveUI.WaveViews.LoadView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:wave="clr-namespace:Executor.WaveUI"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="#000000" MouseLeftButtonDown="Root_OnMouseLeftButtonDown">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <wave:WaveIcon IconName="splash_logo" Width="190" Height="190" Stretch="Uniform" Margin="0,0,0,18" />

            <Grid Width="220" Height="10">
                <Rectangle RadiusX="5" RadiusY="5" Fill="#1A1A1A" Height="6" VerticalAlignment="Center" />
                <Border x:Name="ProgressFill" Background="#1DA1F2" Height="6" Width="0" HorizontalAlignment="Left" VerticalAlignment="Center" CornerRadius="5" />
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>
