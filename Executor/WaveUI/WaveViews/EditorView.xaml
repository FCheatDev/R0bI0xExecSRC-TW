    <UserControl x:Class="Executor.WaveUI.WaveViews.EditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:wave="clr-namespace:Executor.WaveUI"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="#000000" Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="72" />
        </Grid.RowDefinitions>

        <Grid x:Name="EditorHost" Grid.Row="0" Grid.RowSpan="3" Margin="0,0,280,0" Background="#0C0C0C">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="72" />
            </Grid.RowDefinitions>

            <Border Grid.Row="0" CornerRadius="0" Background="#000000" BorderBrush="#202020" BorderThickness="1" Padding="10" Margin="0,0,0,10">
                <DockPanel>
                    <StackPanel DockPanel.Dock="Left" Orientation="Horizontal">
                        <Border Background="#141414" CornerRadius="0" Padding="10,6" Margin="0,0,8,0">
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Width="8" Height="8" Fill="#EDEDED" Opacity="0.9" VerticalAlignment="Center" />
                                <TextBlock Text="Untitled 4" Foreground="#EDEDED" FontWeight="SemiBold" FontSize="12" Margin="5,0,0,0" />
                            </StackPanel>
                        </Border>
                        <Border Background="#141414" CornerRadius="0" Padding="10,6" Margin="0,0,8,0">
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Width="8" Height="8" Fill="#EDEDED" Opacity="0.9" VerticalAlignment="Center" />
                                <TextBlock Text="$UNC" Foreground="#EDEDED" FontWeight="SemiBold" FontSize="12" Margin="5,0,0,0" />
                            </StackPanel>
                        </Border>
                        <Border Background="#141414" CornerRadius="0" Padding="10,6" Margin="0,0,8,0">
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Width="8" Height="8" Fill="#EDEDED" Opacity="0.9" VerticalAlignment="Center" />
                                <TextBlock Text="UNC" Foreground="#EDEDED" FontWeight="SemiBold" FontSize="12" Margin="5,0,0,0" />
                            </StackPanel>
                        </Border>
                        <Border Background="#1DA1F2" CornerRadius="5,5,5,5" Padding="10,6" Margin="0,0,8,0" >
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Width="8" Height="8" Fill="White" Opacity="0.95" VerticalAlignment="Center" />
                                <TextBlock Text="Unnamed ESP" Foreground="White" FontWeight="SemiBold" FontSize="12" Margin="5,0,0,0" />
                                <wave:WaveIcon IconName="editor_tab_close" Width="12" Height="12" Stretch="Uniform" Margin="10,0,0,0" />
                            </StackPanel>
                        </Border>
                        <Border Background="#141414" CornerRadius="0" Padding="10,6" Margin="0,0,8,0">
                            <wave:WaveIcon IconName="editor_tab_add" Width="12" Height="12" Stretch="Uniform" />
                        </Border>
                    </StackPanel>

                    <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                        <wave:WaveIcon IconName="grid" Width="16" Height="16" Stretch="Uniform" Margin="0,0,12,0" OpacityMask="Black" />
                        <wave:WaveIcon IconName="chat" Width="16" Height="16" Stretch="Uniform" Margin="0,0,12,0" />
                    </StackPanel>
                </DockPanel>
            </Border>

            <Border Grid.Row="1" CornerRadius="0" Background="#0C0C0C" BorderBrush="#202020" BorderThickness="1" Margin="0,0,0,10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="40" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Border Background="#0C0C0C" BorderBrush="#202020" BorderThickness="0,0,1,0">
                        <TextBlock Text="1" Foreground="#5D6066" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0" />
                    </Border>
                    <TextBox x:Name="EditorBox" Grid.Column="1" Background="Transparent" Foreground="#EDEDED" BorderThickness="0" FontFamily="Consolas" FontSize="12" AcceptsReturn="True" AcceptsTab="True" TextWrapping="NoWrap" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Margin="10,8,10,8" Text="loadstring(game:HttpGet('https://raw.githubusercontent.com/...'))" />
                </Grid>
            </Border>

            <DockPanel Grid.Row="2" LastChildFill="False" Margin="0,0,3,10" Background="#0C0C0C">
                <StackPanel DockPanel.Dock="Left" Orientation="Horizontal">
                    <Button x:Name="ExecuteButton" Width="92" Height="36" Background="#42A2F8" Foreground="White" BorderThickness="0" Cursor="Hand" Click="Execute_OnClick" Margin="10,0,10,0">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="12">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <TextBlock Text="Execute" FontWeight="SemiBold" FontSize="12" />
                    </Button>

                    <Button Width="74" Height="36" Background="#191A1B" Foreground="#EDEDED" BorderThickness="0" Cursor="Hand" Margin="0" Click="Clear_OnClick">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="12">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <TextBlock Text="Clear" FontWeight="SemiBold" FontSize="12" />
                    </Button>

                    <Button Width="74" Height="36" Background="#191A1B" Foreground="#EDEDED" BorderThickness="0" Cursor="Hand" Margin="10,0,0,0">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="12">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <TextBlock Text="Open" FontWeight="SemiBold" FontSize="12" />
                    </Button>

                    <Button Width="74" Height="36" Background="#191A1B" Foreground="#EDEDED" BorderThickness="0" Cursor="Hand" Margin="10,0,0,0">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="12">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <TextBlock Text="Save" FontWeight="SemiBold" FontSize="12" />
                    </Button>
                </StackPanel>

                <Button x:Name="ExplorerToggleButton" DockPanel.Dock="Right" Width="36" Height="36" Background="#191A1B" Foreground="#EDEDED" BorderThickness="0" Cursor="Hand" Click="ExplorerToggle_OnClick" Margin="10,0,0,0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="12" BorderBrush="#202020" BorderThickness="1">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                    <Image x:Name="ExplorerToggleIcon" Width="16" Height="16" Opacity="1" />
                </Button>
            </DockPanel>

        </Grid>

        <Border x:Name="ExplorerPanel" Width="280" HorizontalAlignment="Right" Grid.Row="0" Grid.RowSpan="3" CornerRadius="0" Background="#000000" BorderThickness="0" RenderTransformOrigin="0,0.5">
            <Border.RenderTransform>
                <TranslateTransform x:Name="ExplorerTransform" X="0" Y="0" />
            </Border.RenderTransform>
            <Grid Margin="14">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <TextBlock Text="EXPLORER" Foreground="#EDEDED" FontSize="14" FontWeight="SemiBold" FontFamily="Arial Black" UseLayoutRounding="True" />
                <TextBlock Grid.Row="1" Text="Explore all your saved scripts" Foreground="#9AA0A6" FontSize="12" Margin="0,6,0,0" FontFamily="Noto Sans HK Black" />

                <Border Grid.Row="2" Background="#0E0E0E" BorderBrush="#202020" BorderThickness="1" CornerRadius="0" Height="36" Padding="12,0" Margin="0,14,0,0" VerticalAlignment="Center">
                    <Grid>
                        <TextBlock Text="" />
                        <wave:WaveIcon IconName="search" Width="14" Height="14" Stretch="Uniform" HorizontalAlignment="Right" VerticalAlignment="Center" Opacity="0.8" />
                    </Grid>
                </Border>

                <StackPanel Grid.Row="3" Margin="0,14,0,0">
                    <Border CornerRadius="0" BorderBrush="#202020" Padding="10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <wave:WaveIcon IconName="right" Width="14" Height="14" Stretch="Uniform" Opacity="0.9" VerticalAlignment="Center">
                                <wave:WaveIcon.RenderTransform>
                                    <RotateTransform Angle="90" CenterX="7" CenterY="7" />
                                </wave:WaveIcon.RenderTransform>
                            </wave:WaveIcon>
                            <TextBlock Grid.Column="1" Text="Saved Scripts" Foreground="#EDEDED" FontWeight="SemiBold" FontSize="12" VerticalAlignment="Center" Margin="10,0,0,0" FontFamily="Arial Black" />
                            <Border Grid.Column="2" Background="#1DA1F2" CornerRadius="0" Width="22" Height="22" HorizontalAlignment="Right">
                                <wave:WaveIcon IconName="explorer_add" Width="12" Height="12" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Border>
                        </Grid>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
