<Window x:Class="Executor.WaveUI.WaveMinimizeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:wave="clr-namespace:Executor.WaveUI"
        xmlns:skia="clr-namespace:SkiaSharp.Views.WPF;assembly=SkiaSharp.Views.WPF"
        mc:Ignorable="d"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        ShowActivated="False"
        Topmost="True"
        ResizeMode="NoResize"
        Width="70"
        Height="69">

    <Window.Resources>
        <Style x:Key="TabContextMenuSeparatorStyle" TargetType="Separator">
            <Setter Property="Margin" Value="6,4" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Separator">
                        <Border Height="1" Background="#4F4F4F" />
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="TabContextMenuStyle" TargetType="ContextMenu">
            <Setter Property="OverridesDefaultStyle" Value="True" />
            <Setter Property="SnapsToDevicePixels" Value="True" />
            <Setter Property="Background" Value="#0C0C0C" />
            <Setter Property="Foreground" Value="#EDEDED" />
            <Setter Property="BorderBrush" Value="#202020" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="6" />
            <Setter Property="MinWidth" Value="160" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ContextMenu">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Cycle" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="TabContextMenuItemStyle" TargetType="MenuItem">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="#EDEDED" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Padding" Value="12,8" />
            <Setter Property="MinHeight" Value="34" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="MenuItem">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}" CornerRadius="5">
                            <Grid Margin="{TemplateBinding Padding}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <ContentPresenter Grid.Column="0" ContentSource="Icon" VerticalAlignment="Center" Margin="0,0,10,0" />
                                <ContentPresenter Grid.Column="1" ContentSource="Header"
                                                  Margin="0"
                                                  RecognizesAccessKey="True"
                                                  VerticalAlignment="Center"
                                                  TextElement.Foreground="{TemplateBinding Foreground}" />
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#1A1A1A" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- 脈衝波紋層 (最底層) -->
        <skia:SKElement x:Name="PulseCanvas"
                        Width="80" Height="80"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        IsHitTestVisible="False"
                        PaintSurface="PulseCanvas_OnPaintSurface" />

        <!-- Wave Logo 和互動層 -->
        <Grid x:Name="Root"
              Width="70" Height="69"
              HorizontalAlignment="Center"
              VerticalAlignment="Center"
              RenderTransformOrigin="0.5,0.5"
              Cursor="Hand"
              Background="#01000000"
              MouseLeftButtonDown="Root_OnMouseLeftButtonDown"
              MouseLeftButtonUp="Root_OnMouseLeftButtonUp"
              MouseMove="Root_OnMouseMove"
              MouseRightButtonDown="Root_OnMouseRightButtonDown">
            <Grid.RenderTransform>
                <ScaleTransform x:Name="RootScale" ScaleX="1" ScaleY="1" />
            </Grid.RenderTransform>

            <Border Width="70"
                    Height="70"
                    CornerRadius="35"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    BorderThickness="0"
                    SnapsToDevicePixels="True" UseLayoutRounding="True"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                <wave:WaveIcon x:Name="ThemeLogoIcon" IconName="wave" Width="40" Height="40" Stretch="Uniform" />
            </Border>
        </Grid>
    </Grid>
</Window>