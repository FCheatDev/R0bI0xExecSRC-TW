<UserControl x:Class="Executor.WaveUI.WaveShell"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:wave="clr-namespace:Executor.WaveUI"
             mc:Ignorable="d"
             FontFamily="{DynamicResource WaveFontFamily}"
             d:DesignHeight="600" d:DesignWidth="1000">

    <UserControl.Resources>
        <SolidColorBrush x:Key="WaveBg" Color="#000000" />
        <SolidColorBrush x:Key="WavePageBg" Color="#000000" />
        <SolidColorBrush x:Key="WaveActiveBg" Color="#000000" />
        <SolidColorBrush x:Key="WavePanel" Color="#101010" />
        <SolidColorBrush x:Key="WavePanel2" Color="#0E0E0E" />
        <SolidColorBrush x:Key="WaveText" Color="#EDEDED" />
        <SolidColorBrush x:Key="WaveSubText" Color="#9AA0A6" />
        <SolidColorBrush x:Key="WaveBlue" Color="#1DA1F2" />

        <Style TargetType="ScrollBar">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="#6FFFFFFF" />
            <Setter Property="Width" Value="10" />
            <Setter Property="Height" Value="10" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid Background="{TemplateBinding Background}" SnapsToDevicePixels="True">
                            <Track x:Name="PART_Track" IsDirectionReversed="True">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton x:Name="PART_DecreaseButton" Command="ScrollBar.PageUpCommand" Opacity="0" Focusable="False" />
                                </Track.DecreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb x:Name="Thumb" Background="{TemplateBinding Foreground}">
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="5" />
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton x:Name="PART_IncreaseButton" Command="ScrollBar.PageDownCommand" Opacity="0" Focusable="False" />
                                </Track.IncreaseRepeatButton>
                            </Track>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="Orientation" Value="Horizontal">
                                <Setter Property="Height" Value="10" />
                                <Setter Property="Width" Value="Auto" />
                                <Setter TargetName="PART_DecreaseButton" Property="Command" Value="ScrollBar.PageLeftCommand" />
                                <Setter TargetName="PART_IncreaseButton" Property="Command" Value="ScrollBar.PageRightCommand" />
                            </Trigger>
                            <Trigger Property="Orientation" Value="Vertical">
                                <Setter Property="Width" Value="10" />
                                <Setter Property="Height" Value="Auto" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="Win11CaptionButton" TargetType="Button">
            <Setter Property="Width" Value="38" />
            <Setter Property="Height" Value="44" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="Margin" Value="0" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="#6c6c6c" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="SnapsToDevicePixels" Value="True" />
            <Setter Property="UseLayoutRounding" Value="True" />
            <Setter Property="FocusVisualStyle" Value="{x:Null}" />
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Root" Background="{TemplateBinding Background}" SnapsToDevicePixels="True" UseLayoutRounding="True">
                            <Border.RenderTransform>
                                <ScaleTransform x:Name="RootScale" ScaleX="1" ScaleY="1" />
                            </Border.RenderTransform>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="#ababab" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="RootScale" Storyboard.TargetProperty="ScaleX" To="0.92" Duration="0:0:0.08" />
                                            <DoubleAnimation Storyboard.TargetName="RootScale" Storyboard.TargetProperty="ScaleY" To="0.92" Duration="0:0:0.08" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="RootScale" Storyboard.TargetProperty="ScaleX" To="1" Duration="0:0:0.12" />
                                            <DoubleAnimation Storyboard.TargetName="RootScale" Storyboard.TargetProperty="ScaleY" To="1" Duration="0:0:0.12" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.4" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="Win11CloseCaptionButton" TargetType="Button" BasedOn="{StaticResource Win11CaptionButton}" />

        <Style x:Key="TopIconButton" TargetType="Button">
            <Setter Property="Width" Value="38" />
            <Setter Property="Height" Value="28" />
            <Setter Property="Background">
                <Setter.Value>
                    <SolidColorBrush Color="Transparent" />
                </Setter.Value>
            </Setter>
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Padding" Value="8,6" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}" CornerRadius="0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#1F1F1F" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#2A2A2A" />
                                <Setter TargetName="Bd" Property="Opacity" Value="0.9" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="TopCloseButton" TargetType="Button" BasedOn="{StaticResource TopIconButton}">
            <Setter Property="Width" Value="43" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}" CornerRadius="0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#E81123" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#C50F1F" />
                                <Setter TargetName="Bd" Property="Opacity" Value="0.95" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="WaveTabButton" TargetType="ToggleButton">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Padding" Value="5" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}" CornerRadius="0" Padding="{TemplateBinding Padding}">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <ContentPresenter />
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.9" />
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#0C0C0C" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.75" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </UserControl.Resources>

    <Grid x:Name="ShellRoot" Background="{StaticResource WavePageBg}">
        <Grid.RowDefinitions>
            <RowDefinition x:Name="TopBarRow" Height="44" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Border x:Name="TopBar" Grid.Row="0" Background="#0a0a0a" Padding="0" MouseLeftButtonDown="TopBar_OnMouseLeftButtonDown">
            <DockPanel LastChildFill="False">
                <StackPanel x:Name="TopNav" DockPanel.Dock="Left" Orientation="Horizontal" VerticalAlignment="Center" Margin="0">
                    <wave:WaveTintIcon x:Name="ThemeLogoIcon" IconName="wave" TintBrush="White" Width="22" Height="22" Margin="14,0,20,0" />
                    <wave:WaveIcon x:Name="KeyLogoIcon" IconName="wave" Width="28" Height="28" Stretch="Uniform" Margin="6,0,20,0" Visibility="Collapsed" />

                    <StackPanel x:Name="TopTabs" Orientation="Horizontal" VerticalAlignment="Center">
                        <ToggleButton x:Name="TabHome" Style="{StaticResource WaveTabButton}" IsChecked="True" Click="Tab_OnClick" Tag="Home">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <wave:WaveTintIcon x:Name="TabHomeIcon" IconName="home" Width="16" Height="16" Margin="0,0,8,0" />
                                <TextBlock x:Name="TabHomeText" Text="HOME" Foreground="{StaticResource WaveText}" FontWeight="SemiBold" FontSize="12" FontFamily="{DynamicResource WaveTitleFontFamily}" RenderTransformOrigin="0,0.5">
                                    <TextBlock.LayoutTransform>
                                        <ScaleTransform x:Name="TabHomeTextScale" ScaleX="1" ScaleY="1" />
                                    </TextBlock.LayoutTransform>
                                </TextBlock>
                            </StackPanel>
                        </ToggleButton>

                        <ToggleButton x:Name="TabEditor" Style="{StaticResource WaveTabButton}" Margin="14,0,0,0" Click="Tab_OnClick" Tag="Editor">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <wave:WaveTintIcon x:Name="TabEditorIcon" IconName="editor" Width="16" Height="16" Margin="0,0,8,0" />
                                <TextBlock x:Name="TabEditorText" Text="EDITOR" Foreground="{StaticResource WaveText}" FontWeight="SemiBold" FontSize="12" FontFamily="{DynamicResource WaveTitleFontFamily}" RenderTransformOrigin="0,0.5">
                                    <TextBlock.LayoutTransform>
                                        <ScaleTransform x:Name="TabEditorTextScale" ScaleX="0" ScaleY="1" />
                                    </TextBlock.LayoutTransform>
                                </TextBlock>
                            </StackPanel>
                        </ToggleButton>

                        <ToggleButton x:Name="TabConsole" Style="{StaticResource WaveTabButton}" Margin="14,0,0,0" Click="Tab_OnClick" Tag="Console">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <wave:WaveTintIcon x:Name="TabConsoleIcon" IconName="console" Width="16" Height="16" Margin="0,0,8,0" />
                                <TextBlock x:Name="TabConsoleText" Text="CONSOLE" Foreground="{StaticResource WaveText}" FontWeight="SemiBold" FontSize="12" FontFamily="{DynamicResource WaveTitleFontFamily}" RenderTransformOrigin="0,0.5">
                                    <TextBlock.LayoutTransform>
                                        <ScaleTransform x:Name="TabConsoleTextScale" ScaleX="0" ScaleY="1" />
                                    </TextBlock.LayoutTransform>
                                </TextBlock>
                            </StackPanel>
                        </ToggleButton>

                        <ToggleButton x:Name="TabScripts" Style="{StaticResource WaveTabButton}" Margin="14,0,0,0" Click="Tab_OnClick" Tag="Scripts">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <wave:WaveTintIcon x:Name="TabScriptsIcon" IconName="scripts" Width="16" Height="16" Margin="0,0,8,0" />
                                <TextBlock x:Name="TabScriptsText" Text="SCRIPTS" Foreground="{StaticResource WaveText}" FontWeight="SemiBold" FontSize="12" FontFamily="{DynamicResource WaveTitleFontFamily}" RenderTransformOrigin="0,0.5">
                                    <TextBlock.LayoutTransform>
                                        <ScaleTransform x:Name="TabScriptsTextScale" ScaleX="0" ScaleY="1" />
                                    </TextBlock.LayoutTransform>
                                </TextBlock>
                            </StackPanel>
                        </ToggleButton>

                        <ToggleButton x:Name="TabClients" Style="{StaticResource WaveTabButton}" Margin="14,0,0,0" Click="Tab_OnClick" Tag="Clients">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <wave:WaveTintIcon x:Name="TabClientsIcon" IconName="clients" Width="16" Height="16" Margin="0,0,8,0" />
                                <TextBlock x:Name="TabClientsText" Text="CLIENTS" Foreground="{StaticResource WaveText}" FontWeight="SemiBold" FontSize="12" FontFamily="{DynamicResource WaveTitleFontFamily}" RenderTransformOrigin="0,0.5"> 
                                    <TextBlock.LayoutTransform>
                                        <ScaleTransform x:Name="TabClientsTextScale" ScaleX="0" ScaleY="1" />
                                    </TextBlock.LayoutTransform>
                                </TextBlock>
                            </StackPanel>
                        </ToggleButton>

                        <ToggleButton x:Name="TabSettings" Style="{StaticResource WaveTabButton}" Margin="14,0,0,0" Click="Tab_OnClick" Tag="Settings">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <wave:WaveTintIcon x:Name="TabSettingsIcon" IconName="settings" Width="16" Height="16" Margin="0,0,8,0" Loaded="TabSettingsIcon_Loaded" />
                                <TextBlock x:Name="TabSettingsText" Text="SETTINGS" Foreground="{StaticResource WaveText}" FontWeight="SemiBold" FontSize="12" FontFamily="{DynamicResource WaveTitleFontFamily}" RenderTransformOrigin="0,0.5">
                                    <TextBlock.LayoutTransform>
                                        <ScaleTransform x:Name="TabSettingsTextScale" ScaleX="0" ScaleY="1" />
                                    </TextBlock.LayoutTransform>
                                </TextBlock>
                            </StackPanel>
                        </ToggleButton>
                    </StackPanel>
                </StackPanel>

                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0">
                    <Button Style="{StaticResource Win11CaptionButton}" Click="MinimizeWave_OnClick">
                        <wave:WaveIcon IconName="minimize_wave" Width="16" Height="16" Stretch="Uniform" Opacity="0.9" />
                    </Button>
                    <Button Style="{StaticResource Win11CaptionButton}" Click="Minimize_OnClick">
                        <Viewbox Width="10" Height="10" Stretch="Uniform" SnapsToDevicePixels="True" UseLayoutRounding="True">
                            <Path Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" StrokeThickness="1" Data="M 1,5.5 H 9" SnapsToDevicePixels="True" RenderOptions.EdgeMode="Aliased" />
                        </Viewbox>
                    </Button>
                    <Button Style="{StaticResource Win11CaptionButton}" Click="Maximize_OnClick">
                        <Grid Width="10" Height="10" RenderTransformOrigin="0.5,0.5" CacheMode="BitmapCache" SnapsToDevicePixels="True" UseLayoutRounding="True">
                            <Grid.RenderTransform>
                                <RotateTransform x:Name="MaximizeIconRotate" Angle="0" />
                            </Grid.RenderTransform>
                            <Path Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" StrokeThickness="1" Data="M 1.5,1.5 H 8.5 V 8.5 H 1.5 Z" SnapsToDevicePixels="True" RenderOptions.EdgeMode="Aliased" />
                        </Grid>
                    </Button>
                    <Button Style="{StaticResource Win11CloseCaptionButton}" Click="Close_OnClick">
                        <Viewbox Width="10" Height="10" Stretch="Uniform" SnapsToDevicePixels="True" UseLayoutRounding="True">
                            <Path Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" StrokeThickness="1" Data="M 2,2 L 8,8 M 8,2 L 2,8" SnapsToDevicePixels="True" RenderOptions.EdgeMode="Aliased" />
                        </Viewbox>
                    </Button>
                </StackPanel>
            </DockPanel>
        </Border>

        <Grid Grid.Row="1">
            <ContentControl x:Name="PageHost" Margin="0" Background="#050505" />
        </Grid>
    </Grid>
</UserControl>
